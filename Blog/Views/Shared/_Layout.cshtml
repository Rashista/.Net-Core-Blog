<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div>
        <nav>
            <a asp-controller="Home" asp-action="Index">Home</a>

            @if (!User.Identity.IsAuthenticated)
            {
                <a asp-controller="Auth" asp-action="Login">Sign In</a>
            }
            else
            {
                <a asp-controller="Panel" asp-action="Edit">Create Post</a>
                <a asp-controller="Panel" asp-action="Index">Admin Panel</a>
                <a asp-controller="Auth" asp-action="Logout">Log Out</a>
            }
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
